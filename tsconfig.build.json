{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist/api",
    "baseUrl": "./",    
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "mvc",
    "projects",
    "server.ts",
    "**/*spec.ts",
    "prerender.ts",
    "node_modules",
    "static.paths.ts"
  ]
}